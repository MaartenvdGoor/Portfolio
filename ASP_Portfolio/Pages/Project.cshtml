@page "{title}"
@model ASP_Portfolio.Pages.ProjectModel
@{
	ViewData["Title"] = Model.project.Name;
}


<div class="container ps-5 pe-5">

	<h1 class="text-center">@Model.project.Name</h1>
	<div class="row">
		<div class="col-2"></div>
		<div class="col-8">
			<div class="card text-bg-secondary shadow-lg rounded bg-secondary p-0 mb-4">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="@Model.project.Main_Image" class="card-img rounded-start" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body d-flex flex-column bg-black h-100">
							<h5 class="card-title">Project Description</h5>
							<p class="card-text">@Model.project.Description</p>
						</div>
					</div>
				</div>
			</div>


			@for (int i = 0; i < Model.project.Info_Image.Length; i++)
			{
				@if (i % 2 != 0)
				{
					<div class="card text-bg-secondary shadow-lg rounded bg-secondary p-0 mb-4">
						<div class="row g-0">
							<div class="col-md-4">
								<img src="@Model.project.Info_Image[i][1]" class="card-img rounded-start" alt="...">
							</div>
							<div class="col-md-8">
								<div class="card-body bg-black h-100">
									<p class="card-text">@Model.project.Info_Image[i][0]</p>
								</div>
							</div>
						</div>
					</div>
				}
				else
				{
					<div class="card text-bg-secondary shadow-lg rounded bg-secondary p-0 mb-4">
						<div class="row g-0">
							<div class="col-md-8">
								<div class="card-body bg-black h-100">
									<p class="card-text">@Model.project.Info_Image[i][0]</p>
								</div>
							</div>
							<div class="col-md-4">
								<img src="@Model.project.Info_Image[i][1]" class="card-img rounded-end" alt="...">
							</div>
						</div>
					</div>
				}

			}


			@if (Model.project.Info_Image.Length % 2 != 0)
			{
				<div class="card text-bg-secondary shadow-lg rounded bg-secondary p-0 mb-4">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="@Model.project.Tech_Image" class="card-img rounded-start" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body bg-black h-100">
								<h5 class="card-title">Technology Used</h5>
								<ul>
									@foreach (var tech in Model.project.Technology_Used)
									{
										<li>@tech</li>
									}
								</ul>
							</div>
						</div>
					</div>
				</div>
			}
			else
			{
				<div class="card text-bg-secondary shadow-lg rounded bg-secondary p-0 mb-4">
					<div class="row g-0">

						<div class="col-md-8">
							<div class="card-body bg-black h-100">
								<h5 class="card-title">Technology Used</h5>
								<ul>
									@foreach (var tech in Model.project.Technology_Used)
									{
										<li>@tech</li>
									}
								</ul>
							</div>
						</div>
						<div class="col-md-4">
							<img src="@Model.project.Tech_Image" class="card-img rounded-start" alt="...">
						</div>
					</div>
				</div>
			}

		</div>
		<div class="col-2"></div>
	</div>
</div>
